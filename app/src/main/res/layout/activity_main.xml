<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eTGrey"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lLBottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:id="@+id/iVHeader"
                android:src="@drawable/rcity_header"
                android:layout_height="240dp" />

            <LinearLayout
                android:id="@+id/lLFirstLL"
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_below="@id/iVHeader"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLDirectOffers"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/direct_offers"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direct Offers"
                        android:textStyle="bold"
                        android:lines="2"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLFindRoutes"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/routes_to_shop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Find Routes to Shops"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLFindFF"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/find_family_and_friends"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Find Family &amp; Friend Shoppers"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_below="@id/lLFirstLL"
                android:weightSum="3"
                android:id="@+id/lLSecondLL"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLFindCar"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/find_my_car"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find My Car"
                        android:textStyle="bold"
                        android:lines="2"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLPrivateShopping"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/private_shopping"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Private Shopping Time"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLPreOrderDeals"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/preorder_deals"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Pre-order Deals"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_below="@id/lLSecondLL"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLFoodOffers"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/food_orders"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Offers"
                        android:textStyle="bold"
                        android:lines="2"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLWallet"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wallet"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="My Points Wallet"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/lLEvacuationGuide"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/evacuation_guide"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Evacuation Guide"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/btnPurple"/>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lLBottom"
        android:focusableInTouchMode="true"
        android:background="@color/btnPurple"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/eTSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for anything"
            android:textColorHint="@android:color/white"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:elevation="15dp"
            android:drawableEnd="@drawable/search"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnSearch"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Search"
            android:textColor="@color/btnPurple"
            android:background="@drawable/rounded_button_white"/>

    </LinearLayout>

</RelativeLayout>